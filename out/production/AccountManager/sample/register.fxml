<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RegisterController">
   <children>
      <VBox layoutX="150.0" layoutY="179.0" prefHeight="129.0" prefWidth="300.0">
         <children>
            <TextField fx:id="registerUsernameTextField" alignment="CENTER" promptText="Enter a username">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="registerPasswordTextField" alignment="CENTER" promptText="Enter a password">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="caBalanceTextField" alignment="CENTER" layoutX="10.0" layoutY="45.0" promptText="Starting Checking Account Balance">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="saBalanceTextField" alignment="CENTER" layoutX="10.0" layoutY="80.0" promptText="Starting Savings Account Balance" />
         </children>
      </VBox>
      <HBox layoutX="443.0" layoutY="359.0" prefHeight="27.0" prefWidth="151.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#setCancelButton" text="Cancel">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="registerAccountButton" mnemonicParsing="false" onAction="#setRegisterButton" text="Register">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <TextArea editable="false" focusTraversable="false" layoutX="120.0" layoutY="31.0" prefHeight="107.0" prefWidth="363.0" text="Register an Account">
         <font>
            <Font size="36.0" />
         </font>
         <effect>
            <Blend />
         </effect>
      </TextArea>
   </children>
</AnchorPane>
